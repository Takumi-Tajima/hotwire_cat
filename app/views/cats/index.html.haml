%p{style: "color: green"}= notice

- content_for :title, "Cats"

%h1 Cats

= search_form_for @q, url: cats_path, method: :get do |f|
  %div
    = f.label :name_cont
    = f.search_field :name_cont
  %div
    = f.label :age_eq
    = f.number_field :age_eq
  %div
    = f.submit

= sort_link @q, :name, class: "btn btn-link"
= sort_link @q, :age, class: "btn btn-link"

%div{id: "cats"}
  - @cats.each do |cat|
    = render cat
    %p
      = link_to "Show this cat", cat

= link_to "New cat", new_cat_path

= paginate @cats

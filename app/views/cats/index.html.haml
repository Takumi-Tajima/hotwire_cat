%h1.fs-2 Cats

= render 'layouts/search_form', q: @q, path: cats_path, search_results: 'cats-list'

= turbo_frame_tag 'cats-list' do
  .card.shadow.my-3
    .card-header.d-flex.justify-content-between.align-items-center
      %div 一覧
      %div= link_to '新規作成', new_cat_path, class: 'btn btn-success'
    .card-body
      %table.table
        %thead
          %tr
            %th= sort_link @q, :name, class: "btn btn-link"
            %th= sort_link @q, :age, class: "btn btn-link"
            %th
        %tbody
          - @cats.each do |cat|
            = render 'cats/cat', cat: cat

  = paginate @cats
